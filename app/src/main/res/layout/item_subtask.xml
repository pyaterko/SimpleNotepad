<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/size_max_small"
    android:layout_marginHorizontal="@dimen/size_xx_medium">

    <CheckBox
        android:id="@+id/chb_subtask"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tv_subtask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginBottom="@dimen/size_xxx_small"
        android:layout_marginEnd="@dimen/size_xx_small"
        app:layout_constraintBottom_toBottomOf="@+id/chb_subtask"
        app:layout_constraintEnd_toStartOf="@+id/tv_delete"
        app:layout_constraintStart_toEndOf="@+id/chb_subtask"
        app:layout_constraintTop_toTopOf="@+id/chb_subtask"
        tools:text="Salmon Salad"
        tools:textColor="@color/black"/>

    <View
        android:id="@+id/tv_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_delete_outline"
        app:layout_constraintBottom_toBottomOf="@+id/chb_subtask"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chb_subtask" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>




