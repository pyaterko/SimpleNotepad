<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/size_large"
    android:layout_marginVertical="@dimen/size_xxx_small"
    android:orientation="horizontal">

    <com.google.android.material.textfield.TextInputEditText
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:boxStrokeWidth="0dp"
        android:layout_weight="1"
        android:hint="@string/subtask" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_baseline_delete_outline_24"
        android:gravity="center"
        android:textSize="20sp" />
    <CheckBox
        android:id="@+id/chb_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="gone"
        android:focusable="true" />
</LinearLayout>